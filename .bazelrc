## OCaml platforms: boot, vm, sys

build:boot --host_platform=//platforms/build:boot
build:boot --platforms=//platforms/target:boot

build:dev --host_platform=//platforms/build:dev
build:dev --platforms=//platforms/target:dev

build:vmvm --host_platform=//platforms/build:vm
build:vmvm --platforms=//platforms/target:vm

build:sysvm --host_platform=//platforms/build:sys
build:sysvm --platforms=//platforms/target:vm

build:vmsys --host_platform=//platforms/build:vm
build:vmsys --platforms=//platforms/target:sys

build:syssys --host_platform=//platforms:sys
build:syssys --platforms=//platforms:sys

#### cross-compilation
build:vmvmsys --host_platform=//platforms:vm
build:vmvmsys --platforms=//platforms/xtarget=sys


