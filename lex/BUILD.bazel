        "//stdlib:Stdlib.Printf",
        "//stdlib:Stdlib.List",
        "//stdlib:Stdlib.Hashtbl",
        "//stdlib:Stdlib.Char",
        "//stdlib:Stdlib.Array",
    ]
)

bootstrap_signature(
