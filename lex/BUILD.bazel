        "//stdlib:Stdlib.Printexc",
        ":Parser",
        "//stdlib:Stdlib.Lexing",
        "//stdlib:Stdlib.Filename",
        "//stdlib:Stdlib.Arg",
    ]
)

bootstrap_module(
    name   = "Output",
    struct = "output.ml",
    sig    = "Output_cmi",
    opts = MODULE_OPTS,
    deps   = STDLIB + [
        ":Syntax", ## (Lex Syntax)
        ":Lexgen", ## (Lex Lexgen)
