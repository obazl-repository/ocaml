        ":Syntax_cmi", ## (Lex Syntax)
        ":Lexgen_cmi", ## (Lex Lexgen)
        ":Common_cmi", ## (Lex Common)
    ]
)

bootstrap_module(
    name   = "Parser",
    struct = "parser.ml",
    opts = MODULE_OPTS,
    deps   = STDLIB + [
        ":Syntax"
    ]
)

bootstrap_ocamlyacc(
    name = "parser_ml",
    out  = "parser.ml",
    src  = "parser.mly",
    opts = ["-v"]
)

bootstrap_module(
    name   = "Syntax",
    struct = "syntax.ml",
    sig    = "Syntax_cmi",
    opts = MODULE_OPTS,
    deps   = STDLIB + [
        ":Cset", ## (Lex Cset)
    ]
)

bootstrap_signature(
    name = "Syntax_cmi",
    src  = "syntax.mli",
    opts = SIG_OPTS,
    deps   = STDLIB + [
        ":Cset_cmi", ## (Lex Cset)
    ]
)

bootstrap_module(
    name   = "Table",
    struct = "table.ml",
    sig    = "Table_cmi",
