load("//test:rules.bzl",
     "test_module",
     "batch_test_macro",
     "inline_expect_test",
)

MODULE_OPTS = []

test_suite(
    name = "lib-arg",
    tests  = [
        ":Test_rest_all_test",
        ":Testarg_test",
        ":Testerror_test",
    ],
)

inline_expect_test(
    name   = "Test_rest_all_test",
    struct = "test_rest_all.ml",
    deps = [
        "//stdlib:Stdlib.Arg",
        "//stdlib:Stdlib",
    ],
    timeout = "short"
)

batch_test_macro(
    name     = "Testarg_test",
    stdout_actual   = "testarg.stdout",
    stdout_expected = "testarg.reference",
    test_module = ":Testarg",
    timeout  = "short"
)

test_module(
    name   = "Testarg",
    struct = "testarg.ml",
    opts = MODULE_OPTS,
    stdlib_deps   = [
        "//stdlib:Stdlib.Arg",
        "//stdlib:Stdlib.Printf"
    ]
)

batch_test_macro(
    name     = "Testerror_test",
    stdout_actual   = "testerror.stdout",
    stdout_expected = "testerror.reference",
    test_module = ":Testerror",
    timeout  = "short"
)

test_module(
    name   = "Testerror",
    struct = "testerror.ml",
    opts = MODULE_OPTS,
    stdlib_deps   = [
        "//stdlib:Stdlib.Arg",
        "//stdlib:Stdlib.Array"
    ]
)

