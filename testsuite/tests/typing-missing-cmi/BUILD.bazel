load("//test:rules.bzl",
     "batch_test_macro",
     "test_module",
     "compile_module_testx",
)

test_suite(
    name = "typing-missing-cmi",
    tests  = [
        ":Main_test",
        # ":Main_ok",
        # ":Test",
