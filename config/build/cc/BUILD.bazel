load("@bazel_skylib//rules:common_settings.bzl",
     "bool_flag", "string_setting")

## Controls debug print stmts related to cc deps in Bazel code

bool_flag(name = "debug", build_setting_default = False,
          tags = ["diagnostics", "verbosity", "cc"],
          visibility = ["//visibility:public"])
config_setting(name = "debug?",
               tags = ["diagnostics", "verbosity", "cc"],
               flag_values = {":debug": "True"})
