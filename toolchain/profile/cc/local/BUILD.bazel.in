load("//toolchain/profile:BUILD.bzl", "cc_toolchain_profile")
load("//toolchain/profile/cc:BUILD.bzl", "fix_oc_cflags")

## local profile generated by ./configure

OC_CFLAGS = fix_oc_cflags("@oc_cflags@".split(" "))

#####################
cc_toolchain_profile(
    name     = "local",
    CFLAGS   = OC_CFLAGS,
    CPPFLAGS = "@oc_cppflags@".split(" "),
    LDFLAGS  = "@LDFLAGS@".split(" ") + "@oc_ldflags@".split(" ")
    primitive = "//runtime:primitives"
)
