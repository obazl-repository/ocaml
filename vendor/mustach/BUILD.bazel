    copts = [
        "-x", "c",
        # "-Wall",
        # "-pedantic",
        "-I", "cjson",
        "-DTOOL=MUSTACH_TOOL_CJSON"
    ] + select({
        "//platform/os:macos?": ["-std=c11"],
        "//platform/os:linux?": [],
        "//conditions:default":  [] #"-std=c11"]
    }) + select({
        "//config/mode:pedantic?": ["-pedantic"],
        "//conditions:default":  []
    }),
    visibility = [
        "//boot:__pkg__",
        "//bytecomp:__pkg__",
        "//config:__pkg__",
        "//debugger:__pkg__",
        "//lambda:__pkg__",
        "//runtime:__subpackages__",
        "//stdlib:__pkg__",
        "//toolchain:__subpackages__",
        "//utils:__pkg__"
    ],
)

