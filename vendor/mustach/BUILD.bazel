cc_binary(
    name = "mustach",
    # alwayslink = True,
    # linkstatic = True,
    srcs = [
        # COREOBJS := mustach.o mustach-wrap.o
        "mustach.c", "mustach.h",
        "mustach-wrap.c", "mustach-wrap.h",
        "main.c",
        "mustach-cjson.c", "mustach-cjson.h",

        "cjson/cJSON.c", "cjson/cJSON.h"
